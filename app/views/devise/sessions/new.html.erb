<div class="container-fluid user-login">
  <div class="row">
    <div class="d-none d-md-block col-md-6 col-lg-8 col-xxl-10 user-login-image">
    </div>
    <div class="col-12 col-md-6 col-lg-4 col-xxl-2">
      <div class="user-login-form">
        <h2>Iniciar sesión</h2>
        <p>¡Hola de nuevo!</p>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="mb-3">
            <%= link_to "¿Has olvidado la contraseña?", new_password_path(resource_name) %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


